<% var url = "/u/" + data.hash.toLowerCase() %>
<% var contact = data.contact ? JSON.stringify(data.contact) : null; -%>
<% var bio = data.bio === null ? 'This user has not added a bio yet.' : data.bio; -%>
<%# replace all " and ' with &quot; and &apos; to avoid breaking the html %>
<% bio = bio.replace(/"/g, '&quot;').replace(/'/g, '&apos;') -%>
<app-profile tab="<%= data.tab %>" you="<%= data.you ? 'true' : 'false' %>" hash="<%= data.hash %>" url="<%= url %>" stories-url="<%= url %>/stories" 
  replies-url="<%= url %>/replies" stories="<%= data.stories %>" replies="<%= data.replies %>" 
  followers-url="<%= url %>/followers" following-url="<%= url %>/following" contact='<%= contact %>'
  picture="<%= data.picture %>" verified="<%= data.verified ? 'true' : 'false' %>" name="<%= data.name %>" followers="<%= data.followers %>"
  following="<%= data.following %>" user-follow="<%= data.is_following ? 'true' : 'false' %>" bio="<%= bio %>">
</app-profile>